{
  "compilerOptions": {
    "target": "es2021",
    "declaration": true,
    "module": "NodeNext",
    "lib": [
      "ESNEXT"
    ],
    // errors in @ethereumjs/devp2p
    "skipLibCheck": true,
    "allowJs": true,
    "sourceMap": true,
    "outDir": "dist",
    "removeComments": true,
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "nodenext",
    "baseUrl": "./",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "@types",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}